<?xml version="1.0" encoding="utf-8"?>
<s:ItemRenderer xmlns:fx="http://ns.adobe.com/mxml/2009"
				xmlns:s="library://ns.adobe.com/flex/spark"
				xmlns:mx="library://ns.adobe.com/flex/mx"
				width="210" height="40"
				rollOver="{currentState = 'over'}" 
				rollOut="{currentState = 'normal'}"
				autoDrawBackground="false">
	
	<s:states>
		<s:State name="normal"/>
		<s:State name="over"/>
	</s:states>
	
	<s:Label x="60" y="0" width="145" height="35" paddingTop="10" text="{data.label}"
			 verticalAlign="top"/>
	
	<s:BitmapImage id="icon" x="0" y="0" width="45" height="40" source="{data.icon}"/>
	
	<s:Rect width="210" height="40" includeIn="over" left="0" right="0" top="0" bottom="0">
		<s:fill>
			<s:SolidColor color="#FF7700" alpha="0.35"/>
		</s:fill>
	</s:Rect>	
	
</s:ItemRenderer>
